<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/seancesFragment">

    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.MyProfileFragment"
        android:label="Mon profil"
        tools:layout="@layout/fragment_my_profile" />
    <fragment
        android:id="@+id/trouverUneSeanceFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.TrouverUneSeanceFragment"
        android:label="Trouver une séance"
        tools:layout="@layout/fragment_seances" />
    <fragment
        android:id="@+id/seancesFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.SeancesFragment"
        android:label="Mes séances"
        tools:layout="@layout/fragment_seances" />
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.MessagesFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/nouvelleSeanceFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.NouvelleSeanceFragment"
        android:label="Programmer une séance"
        tools:layout="@layout/fragment_nouvelle_seance">
        <action
            android:id="@+id/action_nouvelleSeanceFragment_to_seancesFragment"
            app:destination="@id/seancesFragment"
            app:popUpTo="@+id/seancesFragment" />
    </fragment>
    <fragment
        android:id="@+id/indoorChoiceFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.IndoorChoiceFragment"
        android:label="Nouvelle séance"
        tools:layout="@layout/fragment_indoor_choice" >
        <action
            android:id="@+id/action_indoorChoiceFragment_to_typeSeanceFragment"
            app:destination="@id/typeSeanceFragment"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/typeSeanceFragment"
        android:name="com.example.fsudouest.blablafit.Ui.Fragments.TypeSeanceFragment"
        android:label="Nouvelle Séance"
        tools:layout="@layout/fragment_type_seance" />
</navigation>