<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="actionBarTheme">@style/ActionbarTheme</item>

    </style>

    <style name="ActionbarTheme">
        <item name="android:background">@color/white</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>

    </style>

    <style name="FabTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@color/white</item>
        <item name="android:colorSecondary">@color/colorPrimary</item>
    </style>


</resources>
